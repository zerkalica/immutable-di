{
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "node": true,
        "es6": true
    },

    "globals": {
        "Promise": true,
        "fetch": true,
        "process": true
    },
    "rules": {
        "valid-jsdoc": 2,
        "curly": [2, "all"],
        "complexity": [1, 12],
        "default-case": 2,
        "no-div-regex": 2,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-process-env": 2,
        "no-self-compare": 2,
        "no-throw-literal": 2,
        "no-void": 2,
        "wrap-iife": [1, "inside"],
        "new-cap": 0,
        "semi": 0,
        "yoda": [2, "never"],
        "strict": 0,
        "quotes": [2, "single"],
        "dot-notation": [2, {
            "allowKeywords": true,
            "allowPattern": ""
        }],
        "indent": [2, 4, {
            "indentSwitchCase": true
        }],
        "brace-style": [2, "1tbs", {
            "allowSingleLine": false
        }],
        "comma-style": 2,
        "consistent-this": [2, "self"],
        "max-nested-callbacks": [2, 3],
        "no-lonely-if": 2,
        "no-nested-ternary": 2,
        "quote-props": [2, "as-needed"],
        "no-underscore-dangle": 0,
        "space-before-blocks": [2, "always"],
        "space-in-brackets": [2, "never"],
        "space-unary-ops": 2,
        "spaced-line-comment": 2,
        "wrap-regex": 2,
        "no-var": 2,
        // Node.js specific
        "handle-callback-err": [1, "^(err|error)$"],
        "no-mixed-requires": 1
    }
}
